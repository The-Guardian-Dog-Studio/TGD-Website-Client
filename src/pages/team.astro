---
import { TeamSection } from "@/components";
import Layout from "@/layouts/Layout.astro";
import { makeTeamData } from "@/main/factories";

const teamData = makeTeamData();
---

<Layout title="Team" topPageHref="">
  <main class="min-h-[calc(100vh-15.75rem)] w-full" id="">
    <div class="mx-auto w-11/12 max-w-screen-lg">
      <TeamSection
        className="grid grid-cols-1 gap-12 sm:grid-cols-2 sm:gap-8 lg:grid-cols-3"
        title={teamData.title}
        content={teamData.data}
      />
    </div>
  </main>
</Layout>


<script is:inline>
	gsap.registerPlugin(ScrollTrigger);

	document.querySelectorAll("main #team div").forEach((el, i) => {
	  gsap.to(el, {
	    opacity: 0,
	    y: -50,
	    duration: 0,
	    scrollTrigger: el
	  })

	  gsap.to(el, {
	    opacity: 1,
	    y: 0,
	    duration: 0.25,
	    delay: 0.05 * i,
	    scrollTrigger: el
	  })

	  const li = el.querySelectorAll("li")
	  li.forEach((li, i) => {
	    gsap.to(li, {
	      opacity: 0,
	      x: -50,
	      duration: 0,
	      scrollTrigger: el
	    })

	    gsap.to(li, {
	      opacity: 1,
	      x: 0,
	      duration: 0.5,
	      delay: 0.25 * i,
	      scrollTrigger: el
	    })
	  })
	})

	gsap.to("#footer", {
	  opacity: 0,
	  duration: 0,
	  y: 100,
	  scrollTrigger: "#footer"
	})


	gsap.to("#footer", {
	  opacity: 1,
	  duration: 0.5,
	  y: 0,
	  scrollTrigger: "#footer"
	})


	gsap.to("#footer>div", {
	  opacity: 0,
	  duration: 0,
	  y: 50,
	  scrollTrigger: "#footer"
	})


	gsap.to("#footer>div", {
	  opacity: 1,
	  duration: 0.5,
	  y: 0,
	  delay: 0.25,
	  scrollTrigger: "#footer"
	})
</script>

