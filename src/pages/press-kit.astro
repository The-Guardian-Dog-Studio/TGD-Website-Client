---
import {
  ArticlesSection,
  AwardsSection,
  Factsheet,
  Footer,
  Head,
  ImagesSection,
  Link,
  Logo,
  PressKitNavigation,
  PressKitSection,
  ProjectsSection,
  Seo,
  TeamSection,
  VideosSection,
} from "@/components";
import { makePressKitData } from "@/main/factories";

const pressKit = makePressKitData();
const repeatedSections = ["description", "history", "videoPolicy"] as const;
const {
  siteUrl,
  navigation,
  factsheet,
  projects,
  videos,
  images,
  logos,
  awards,
  articles,
  team,
  contact,
} = pressKit;
---

<!DOCTYPE html>
<html lang="pt-br">
  <Head generator={Astro.generator}>
    <Seo title="Press Kit" />
  </Head>

  <body class="grid grid-cols-12" id="top">
    <PressKitNavigation
      navigationLinks={navigation.data}
      siteUrl={siteUrl}
      title={navigation.title}
      client:only="react"
    />

    <main
      class="col-start-1 col-end-13 px-10 pt-14 lg:col-start-4 lg:col-end-13 lg:pr-16"
    >
      <div id="logo" class="invisible ml-auto hidden w-fit lg:visible lg:block">
        <Logo />
      </div>

      <div class="flex flex-col gap-2 lg:flex-row">
        <Factsheet factsheet={factsheet} />

        <div>
          {
            repeatedSections.map((section) => (
              <PressKitSection
                id={section}
                noHr
                title={pressKit[section].title}
              >
                <p class="text-justify">{pressKit[section].content}</p>
              </PressKitSection>
            ))
          }

          <ProjectsSection title={projects.title} content={projects.content} />
        </div>
      </div>
      <hr class="w-full border-gray-300" />

      <VideosSection
        title={videos.title}
        content={videos.content}
        client:visible
        lazy
      />
      <ImagesSection
        id="images"
        title={images.title}
        zipDownload={images["zip-download"]}
        content={images.content}
        client:visible
        lazy
      />
      <ImagesSection
        id="logo-and-icons"
        title={logos.title}
        zipDownload={logos["zip-download"]}
        content={logos.content}
        client:visible
        lazy
      />
      <AwardsSection title={awards.title} content={awards.content} />
      <ArticlesSection title={articles.title} content={articles.content} />

      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
        <TeamSection title={team.title} content={team.data} />

        <PressKitSection id="contact" noHr title={contact.title}>
          {
            contact.content.map((contact) => (
              <PressKitSection.Content title={contact.name}>
                <Link.Blank href={contact.url} noPrefix className="break-all text-brand-blue">{contact.text}</Link.Blank>
              </PressKitSection.Content>
            ))
          }
        </PressKitSection>
      </div>
    </main>

    <Footer topPageHref="#top" showLinks={false} />
    <style is:global>
      html,
      body {
        scroll-behavior: smooth;
      }
    </style>

		<script is:inline>
			gsap.registerPlugin(ScrollTrigger);


			document.addEventListener("DOMContentLoaded", () => {
				setTimeout(() => {
				gsap.to("#header", {
						opacity: 0,
						y: -100,
						duration: 0,
						scrollTrigger: "#header"
					}
				)

				gsap.to("#header", {
					opacity: 1,
					y: 0,
					duration: 0.5,
					scrollTrigger: "#header"
					}
				)
				
				gsap.to("#sidebar", {
						opacity: 0,
						duration: 0,
						scrollTrigger: "#sidebar"
					}
				)

				gsap.to("#sidebar", {
					opacity: 1,
					duration: 0.5,
					scrollTrigger: "#sidebar"
					}
				)

				document.querySelectorAll("#sidebar nav ul li").forEach((el, i) => {
					gsap.to(el, {
						opacity: 0,
						x: -50,
						duration: 0,
						scrollTrigger: el
						}
					)

					gsap.to(el, {
						opacity: 1,
						x: 0,
						duration: 0.5,
						delay: 0.05 * i,
						scrollTrigger: el
					})
				})
				}, 400)
			})


			gsap.to("#logo", {
				opacity: 0,
				x: +50,
				duration: 0,
				scrollTrigger: "#logo"
				}
			)

			gsap.to("#logo", {
				opacity: 1,
				x: 0,
				duration: 0.5,
				scrollTrigger: "#logo"
				}
			)

			document.querySelectorAll("hr").forEach((el) => {
				gsap.to(el, {
					opacity: 0,
					duration: 0,
					scale: 0,
					scrollTrigger: el
					}
				)

				gsap.to(el, {
					opacity: 1,
					duration: 2,
					scale: 1,
					scrollTrigger: el
					}
				)
			})

			document.querySelectorAll("main section").forEach((el, i) => {
				gsap.to(el, {
					opacity: 0,
					duration: 0,
					y: -50,
					scrollTrigger: el
					}
				)

				gsap.to(el, {
					opacity: 1,
					duration: 0.5,
					y: 0,
					delay: 0.05 * i,
					scrollTrigger: el
					}
				)
			})


			gsap.to("#footer", {
				opacity: 0,
				duration: 0,
				y: 100,
				scrollTrigger: "#footer"
			})


			gsap.to("#footer", {
				opacity: 1,
				duration: 0.5,
				y: 0,
				scrollTrigger: "#footer"
			})


			gsap.to("#footer>div", {
				opacity: 0,
				duration: 0,
				y: 50,
				scrollTrigger: "#footer"
			})


			gsap.to("#footer>div", {
				opacity: 1,
				duration: 0.5,
				y: 0,
				delay: 0.25,
				scrollTrigger: "#footer"
			})
		</script>

  </body>
</html>
